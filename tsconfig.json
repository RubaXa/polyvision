{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@qr/*": ["qr/*"],
      "@login/*": ["login/*"],
      "@step/*": ["step/*"],
      "@utils/*": ["utils/*"]
    },
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "removeComments": false,
    "strictNullChecks": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "jsx": "react",
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
